                },{
                    text : '重置',
                    id : 'resetBtn',
                    handler : function() {
                    	alert("重置");
                    	var pDocument = document.getElementById("addDriverIFrame").contentWindow.document;
                    	pDocument.getElementById('driverAdd_form').reset();
                        
                    }
                },{
                    text : '返回',
                    id : 'returnBtn',
                    handler : function() {
                    	alert("返回");
